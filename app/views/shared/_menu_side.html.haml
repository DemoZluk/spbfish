- cache "groups/#{Group.maximum(:updated_at).utc.try(:to_s, :number)}#{request.path}" do
  %aside.side-panel
    .show_hide_tree ▼ Каталог ▼
    %nav.menu_side
      %ul
        - Group.where(parent_id: '').order('-priority DESC').each do |group|
          = group.all_products.accessible_by(current_ability).any?
          = menu_for_group(group)
